{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "zshdb",
            "request": "launch",
            "name": "prepare-sources",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/prepare-sources.sh",
            "args": ["--proto", "./example_1/service.proto", 
                    "--flutterDir", "./example_1/app",
                    "--pythonDir", "./example_1/server"]
        },
        {
            "type": "zshdb",
            "request": "launch",
            "name": "bundle-python",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/bundle-python.sh",
            "args": ["--proto", "./example_1/service.proto", 
                    "--flutterDir", "./example_1/app",
                    "--pythonDir", "./example_1/server"]
        },
        {
            "name": "app",
            "cwd": "example_1/app",
            "request": "launch",
            "type": "dart",
        },
        {
            "name": "app (profile mode)",
            "cwd": "example_1/app",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "app (release mode)",
            "cwd": "example_1/app",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}