    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "zshdb",
            "request": "launch",
            "name": "Zsh-Debug (hardcoded script name)",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/prepare-sources.sh",
            "args": ["--proto", "./_example/service.proto", 
                    "--flutterDir", "./_example/app",
                    "--pythonDir", "./_example/service"]
        },
        {
            "name": "app",
            "cwd": "_example/app",
            "request": "launch",
            "type": "dart",
        },
        {
            "name": "app (profile mode)",
            "cwd": "_example/app",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "app (release mode)",
            "cwd": "_example/app",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}